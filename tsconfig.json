{
  "compilerOptions" : {
    "module"        : "es6",
    "target"        : "es5",
    "sourceMap"     : true,
    "outDir"        : "./dist/",
    "noImplicitAny" : true,
    "jsx"           : "react",
    "allowJs"       : true
  },
  "include"         : [
    "src/*.ts"
  ],
  "compileOnSave"   : true,
  "typeAcquisition" : {
    "enable" : true
  },
  "exclude"         : [
    "node_modules"
  ]
}